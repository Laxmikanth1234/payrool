                      <%= image_tag attachments.inline['logo.png'].url %>
                    </td>
                  </tr>
                </table>
              </td>
            </tr>
            
          </table>
        </td>
      </tr>
      <tr>
        <td style="background-color: #0064d3; height: 30px;">
          &nbsp;
        </td>
      </tr>
