<div class="bootstrap">
<div class="panel panel-default" style="width:50%">
  <!-- Default panel contents -->
  <div class="panel-heading bold">Leave Details</div>

  <!-- Table -->
  <table class="table" style="width:50%">
    <tr>
      <td>
        Total No of Days:
      </td>
      <td>
        <%=@leave.total_days%>
      </td>
    </tr>
    <tr>
      <td>
        No of working Days:
      </td>
      <td>
        <%=@leave.total_days.to_i - @leave.holiday_days.to_i%>
      </td>
    </tr>
    <tr>
      <td>
        Name:
      </td>
      <td>
        <%=@leave.user.first_name%>
      </td>
    </tr>
    <tr>
      <td>
        Start Date:
      </td>
      <td>
        <%=@leave.start_date%>
      </td>
    </tr>
    <tr>
      <td>
        End Date:
      </td>
      <td>
        <%=@leave.end_date%>
      </td>
    </tr>
    <tr>
      <td>
        Reason For Leave:
      </td>
      <td>
        <%=@leave.reason_for_leave%>
      </td>
    </tr>
  </table>
 </div>
 <div class="actions">
    <%= link_to 'Back', leaves_path, :class=> 'btn btn-primary' %>
    <%= link_to 'Approve', approve_leave_leafe_path(@leave), :method => 'put',:class=> 'btn btn-success' %>
    <%= link_to 'Reject', approve_leave_leafe_path(@leave, :rejected => "Rejected"), :method => 'put',:class=> 'btn btn-danger' %>
  </div>
</div>
