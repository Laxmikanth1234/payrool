<div class="bootstrap">
<h1> Generate Payrolll </h1>
</div>
<br/>
<br/>
<table class="table table-striped table-bordered">
  <thead>
  <tr>
    <th>Number</th>
    <th>Name</th>
    <th>Reporting Manager</th>
    <th>Active/Status</th>
    <th>Leaves Per Year/Opted YTD</th>
  </tr>
</thead>
<tbody>
<% @employes.each do |employe| %>
  <tr>
    <td><%= employe.number %></td>
    <td><%= employe.first_name %> <%= employe.middle_name %> <%= employe.last_name %></td>
    <td><%= employe.reporting_manager %>  </td>
    <td><%= employe.active ? "Yes" : "No" %>/ <%= employe.employement_status %></td>
    <td><%= employe.leaves_per_year %>/<%= employe.leaves_opted.sum(:working_days)%></td>
  </tr>
<% end %>
</tbody>
</table>
</div>

