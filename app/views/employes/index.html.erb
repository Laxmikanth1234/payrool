<div class="bootstrap">
<h1>Manage Employees</h1>
<div class="float_r">
  <% if current_user.is_admin? %> 
 <%= link_to 'New Employe', new_user_registration_path,:class => 'btn btn-info' %>
<% end %>
</div>
<br/>
<br/>
<table class="table table-striped table-bordered">
  <thead>
  <tr>
    <th>Number</th>
    <th>Name</th>
    <th>Email</th>
    <th>Date of Joining</th>
    <th>Mobile Number</th>
    <th>Active</th>
    <th>Actions</th>
  </tr>
</thead>
<tbody>
<% @employes.each do |employe| %>
  <tr>
    <td><%= employe.id %></td>
    <td><%= employe.first_name %> <%= employe.middle_name %> <%= employe.last_name %></td>
    <td><%= employe.email %></td>
    <td><%= employe.date_of_joining %></td>
    <td><%= employe.mobile_number %></td>
    <td><%= employe.active ? "Yes" : "No" %></td>
    <td>
     <div style="float:left;">
       <%= link_to image_tag("edit.png",:style => "height:20px;float:left"), edit_employe_path(employe),:rel => "tooltip", :title => "Edit Employee" %> 
      <% if !current_user.is_employee? %> 
        <%= link_to  image_tag("delete.jpg",:style => "height:20px;float:right"), user_registration_path(employe), confirm: 'Are you sure?', method: :delete,:rel => "tooltip", :title => "Remove Employee" %>
      <% end %>
     </div>
    </td>
  </tr>
<% end %>
</tbody>
</table>
</div>


